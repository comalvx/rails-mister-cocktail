<div class="container">
  <%= link_to '<< Cocktails list', cocktails_path, class: "link-back" %>
  <div class="cocktail-info">
    <div class="title">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400 %>
    </div>

    <div class="ingredients">
      <% @cocktail.doses.each do |dose| %>
        <p>Ingr√©dient : <%= dose.ingredient.name %> <%= link_to dose_path(dose),
            method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
          </p>
          <p>Dose : <%= dose.description %></p>
      <% end %>
    </div>
  </div>

  <h2>Add a new ingredient</h2>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
