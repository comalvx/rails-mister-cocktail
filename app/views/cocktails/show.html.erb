<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 400, width: 400 %>

<% @cocktail.doses.each do |dose| %>
  <p>Dose : <%= dose.description %></p>
  <p>Ingr√©dient : <%= dose.ingredient.name %><%= link_to "Delete", dose_path(dose),
      method: :delete, data: { confirm: "Are you sure?" }
    %></p>
<% end %>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
<% end %>

